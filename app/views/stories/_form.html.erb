<%= form_for(story) do |form| %>
<div class="field">
  <%= form.label :title, "標題", class: "label" %>
  <%= form.text_field :title, class: "input is-large is-primary" %>
</div>


<div class="field">
  <%= form.label :content, "內文", class: "label" %>
  <%= form.text_area :content, rows: 10, class: "textarea is-primary" %>
</div>

<div class="field">
  <%= form.submit "儲存草稿", class: "button is-medium" %>
  <%= form.submit "發布文章", class: "button is-medium is-primary" %>

</div>

<% end %>