<h2 class="title">登入</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field">
  <%= f.label :email, class: "label" %>
  <div class="control has-icons-left is-medium">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
  </div>

</div>

<div class="field">
  <%= f.label :password, class: "label" %>
  <div class="control has-icons-left is-medium">
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </div>

</div>

<% if devise_mapping.rememberable? %>
<div class="field">
  <%= f.check_box :remember_me, class: "checkbox" %>
  <%= f.label :remember_me, class: "checkbox" %>
</div>
<% end %>

<div class="actions">
  <%= f.submit "登入", class: "button is-primary is-medium" %>
</div>
<% end %>
<hr>
<%= render "devise/shared/links" %>